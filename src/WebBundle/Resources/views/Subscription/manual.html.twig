{% extends "WebBundle::login.html.twig" %}
{% set subtitle =   "Subscription"  %}
{% set og_description =  "Subscription" %}
{% set og_type =  "null" %}
{% set og_image =  "null" %}
{% set keywords =  "null" %}
{% block body %}

<div class="tab-title">Subscribe now !</div>

<div id="subscribe-plan">
	<div class="subscribe-title" id="selected_pack">
		<span>1</span>

		<h5>{{subscription.pack}}</h5>
		<span class="fas fa-check float-right"></span>
		<span class="float-right price-step-1">{{subscription.price}} {{subscription.currency}}</span>
	</div>
	<div class="subscribe-title" id="selected_pack">
		<span>2</span>

		<h5>Payment Method </h5>
		<span class="fas fa-check float-right"></span>
		<span class="float-right price-step-1"><i class='fas fa-money-check-alt'></i> Manual / Cash</span>
	</div>
	<div class="subscribe-title">
		<span>3</span>
		<h5>Upload your payment infos</h5>
		<span class="float-right"><i class="fas fa-money-check-alt"></i></span>
	</div>
		<p>
        <div class="form-group">
        	<label>Our Payment account details :</label>
        	<p class="banque-account">
                {{account|nl2br}}
        	</p>
        </div>
		</p>
		{{form_start(form)}}
        <div class="form-group">
        	<label>Payment transaction Id :</label>
            {{form_widget(form.transaction,{"attr":{"class":"form-control"}})}}
            <span class="validate-input">{{form_errors(form.transaction)}}</span>
        </div>
        <div class="form-group">
        	<label>Other Payment infos :</label>
            {{form_widget(form.infos,{"attr":{"class":"form-control"}})}}
            <span class="validate-input">{{form_errors(form.infos)}}</span>
        </div>
        {{form_widget(form.file,{attr:{"class":"float-right btn btn-primary"}})}}</span>
        <div class="file-input">
        	<div class="message-after">	<i class="fas fa-check "></i> File has been selected</div>
        	<div class="message-before">	<i class="fas fa-money-check-alt"></i> Click to upload file here</div>
       	</div>
        <span class="validate-input">{{form_errors(form.file)}}</span>
        <button class="float-right btn btn-primary"><i class="fas fa-check"></i> Send your payment</button>
        {{form_end(form)}}

</div>

{% endblock %}